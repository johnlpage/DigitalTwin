<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender for your application logs -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender (optional) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/digitaltwin.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/digitaltwin.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress MongoDB driver verbose logging -->
    <logger name="org.mongodb.driver" level="WARN"/>
    <logger name="org.mongodb.driver.connection" level="WARN"/>
    <logger name="org.mongodb.driver.management" level="WARN"/>
    <logger name="org.mongodb.driver.cluster" level="WARN"/>
    <logger name="org.mongodb.driver.protocol" level="WARN"/>
    <logger name="org.mongodb.driver.uri" level="WARN"/>
    <logger name="org.mongodb.driver.authenticator" level="WARN"/>

    <!-- Your application logger - adjust the package name -->
    <logger name="com.mongodb.examples.java.mongotwin" level="INFO"/>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- Uncomment if you want file logging -->
        <!-- <appender-ref ref="FILE"/> -->
    </root>

</configuration>
